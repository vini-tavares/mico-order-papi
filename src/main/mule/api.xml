	<flow name="post:\orders:application\json:mico-order-papi-config">
		<flow-ref
			doc:name="postOrdersFlow"
			doc:id="fefc83b7-b99a-4ff0-b240-1d698a7cb3de"
			name="postOrdersFlow" />
	</flow>



</mule>